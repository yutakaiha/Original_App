<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">制度開始日</th>
      <th scope="col">実施事業名</th>
    </tr>
  </thead>
  <tbody>
    <% @subsidies.each.with_index(1) do |subsidy, i| %>
      <tr>
        <th scope="row"><%= i %></th>
        <td><%= subsidy.start_date.strftime("%Y/%m/%d") %></td>
        <td><%= link_to subsidy.title, subsidy %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="pagination">
  <p><%= paginate @subsidies %></p>
</div>