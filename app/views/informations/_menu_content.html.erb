<div class="container menu-area mx-auto mt-4">
  <div class="menu-title">
    <h3 class="text-center"><span>メニュー一覧</span></h3>
  </div>
  <div class="row">
    <div class="col-md-6 text-center mt-5">
      <%= link_to '助成金等検索', :subsidies, class: "btn btn-info w-50"  %>
    </div>
    <div class="col-md-6 text center mt-5">
      <!-- Button trigger modal -->
      <div class="button-text text-center">
        <button type="button" class="btn btn-info w-50" data-toggle="modal" data-target="#exampleModalCenter">
          ライフイベントから検索
        </button>
      </div>
      
      <!-- Modal -->
      <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalCenterTitle">ライフイベント一覧</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <%= link_to '妊娠・出産',  event_path(id: 1), class: "dropdown-item border-bottom border-aqua text-primary" %>
              <%= link_to '子育て・保育',  event_path(id: 2), class: "dropdown-item border-bottom border-aqua text-primary" %>
              <%= link_to '学校教育',  event_path(id: 3), class: "dropdown-item border-bottom border-aqua text-primary" %>
              <%= link_to '結婚・離婚',  event_path(id: 4), class: "dropdown-item border-bottom border-aqua text-primary" %>
              <%= link_to '引越し・暮らし',  event_path(id: 5), class: "dropdown-item border-bottom border-aqua text-primary" %>
              <%= link_to '就職・退職',  event_path(id: 6), class: "dropdown-item border-bottom border-aqua text-primary" %>
              <%= link_to '高齢者・介護',  event_path(id: 7), class: "dropdown-item border-bottom border-aqua text-primary" %>
              <%= link_to 'おくやみ',  event_path(id: 8), class: "dropdown-item border-bottom border-aqua text-primary" %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 text-center mt-5">
      <%= link_to 'カテゴリ別検索', :categories, class: "btn btn-info w-50"  %>
    </div>
    <div class="col-md-6 text-center mt-5">
      <% if user_signed_in? %>
        <%= link_to '気軽に相談コーナー', :questions, class: "btn btn-info w-50" %>
      <% else %>
        <%= link_to '気軽に相談コーナー', :questions, class: "btn btn-info w-50 disabled"  %>
      <% end %>
  
      <p class="mt-3">※ご利用するにはユーザ登録又はログインする必要があります。</p>
    </div>
  </div>
</div>